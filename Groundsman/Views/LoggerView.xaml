<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Groundsman.LoggerView"
             xmlns:local="clr-namespace:Groundsman"
             Title="Logger"
             BackgroundColor="{DynamicResource bgPrimary}">
    <ContentPage.ToolbarItems>
        <ToolbarItem AutomationId="id_icon" Icon="share_icon" Command="{Binding ShareButtonClickCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.BindingContext>
        <local:LoggerViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Margin="10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Frame Style="{StaticResource FrameStyle}" Grid.Row="0">
                <FlexLayout Style="{StaticResource ContainerStyleRow}" HeightRequest="40">
                    <Label Style="{StaticResource InputLabelStyle}" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" Text="Logging Interval: " />
                    <Entry Text="{Binding IntervalEntry}" TextColor="{StaticResource textSecondary}" HorizontalTextAlignment="End" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" FontSize="Small" WidthRequest="44" Margin="0,6,0,0" />
                    <Label Style="{StaticResource InputLabelStyle}" Grid.Row="0" Grid.Column="0" Margin="0" Text="seconds" HorizontalOptions="Start"/>

                </FlexLayout>
            </Frame>
            <Frame Style="{StaticResource FrameStyle}" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height=".9*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource InputLabelStyle}" Text="Log File: (Time, Latitude, Longitude, Altitude) " Grid.Row="0" Grid.Column="0" Margin="10" />
                    <Frame Style="{StaticResource FrameStyle}" Grid.Row="1" Margin="0">
                        <ScrollView x:Name="ScrollBox">
                            <Label x:Name="logLabel" PropertyChanged="LogLabel_PropertyChanged" Style="{StaticResource EditorStyle}" Text="{Binding TextEntry}"   FontSize="Micro" IsEnabled="true" >
                            
                        </Label>
                        </ScrollView>
                        
                    </Frame>
                    <StackLayout Orientation="Horizontal" Grid.Row="2" HorizontalOptions="CenterAndExpand">
                        <Button Grid.Row="2" AutomationId="ToggleButton" Text="{Binding ToggleButtonLabel}" Command="{Binding ToggleButtonClickCommand}" Padding="10, 0">
                            <Button.TextColor>
                                <OnPlatform x:TypeArguments="Color" iOS="{StaticResource greenPrimary}" Android="white" />
                            </Button.TextColor>
                        </Button>
                        <Button Grid.Row="2" AutomationId="ClearButton" Text="Clear" Command="{Binding ClearButtonClickCommand}" Padding="10, 0">
                            <Button.TextColor>
                                <OnPlatform x:TypeArguments="Color" iOS="{StaticResource greenPrimary}" Android="white" />
                            </Button.TextColor>
                        </Button>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
