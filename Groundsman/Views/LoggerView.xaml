<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Groundsman.Views.LoggerView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Style="{StaticResource PageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ShareButtonClickCommand}" Icon="share_icon" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <Frame BackgroundColor="{DynamicResource Background}"
                   Style="{StaticResource FrameM}"
                   VerticalOptions="FillAndExpand">
                <ScrollView x:Name="ScrollBox">
                    <Label x:Name="logLabel"
                           FontSize="Caption"
                           PropertyChanged="LogLabel_PropertyChanged"
                           Text="{Binding TextEntry}" />
                </ScrollView>
            </Frame>
            <Grid Margin="10,0,10,10"
                  ColumnDefinitions="2.5*,*,*"
                  HorizontalOptions="Fill"
                  RowDefinitions="*"
                  VerticalOptions="End">
                <Frame Grid.Column="0"
                       Padding="0"
                       HorizontalOptions="Fill"
                       Style="{StaticResource Frame}"
                       VerticalOptions="Fill">
                    <StackLayout Padding="5,0" Orientation="Horizontal">
                        <Label FontSize="Small"
                               Text="Interval:"
                               TextColor="{StaticResource Text}"
                               VerticalOptions="Center" />
                        <Entry FontSize="Small"
                               HorizontalTextAlignment="End"
                               Keyboard="Numeric"
                               Text="{Binding IntervalEntry}"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Center"
                               WidthRequest="30" />
                        <Picker FontSize="Small"
                                HorizontalOptions="FillAndExpand"
                                ItemsSource="{Binding UnitItems}"
                                SelectedIndex="{Binding UnitEntry}"
                                TextColor="{StaticResource TextSecondary}"
                                TitleColor="Black"
                                VerticalOptions="Center" />
                    </StackLayout>
                </Frame>
                <Button Grid.Column="1"
                        Command="{Binding ToggleButtonClickCommand}"
                        HorizontalOptions="FillAndExpand"
                        Style="{StaticResource ModalButton}"
                        Text="{Binding ToggleButtonLabel}" />
                <Button Grid.Column="2"
                        Command="{Binding ClearButtonClickCommand}"
                        HorizontalOptions="FillAndExpand"
                        Style="{StaticResource ModalButton}"
                        Text="Clear" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
