<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Groundsman.Views.LoggerView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem AutomationId="id_icon"
                     Command="{Binding ShareButtonClickCommand}"
                     Icon="share_icon" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid Margin="10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" Style="{StaticResource FrameStyle}">
                <FlexLayout HeightRequest="40" Style="{StaticResource ContainerStyleRow}">
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Margin="10,0,0,0"
                           Style="{StaticResource InputLabelStyle}"
                           Text="Logging Interval: " />
                    <Entry Grid.Row="0"
                           Grid.Column="1"
                           Margin="0,6,0,0"
                           FontSize="Small"
                           HorizontalTextAlignment="End"
                           Keyboard="Numeric"
                           Text="{Binding IntervalEntry}"
                           TextColor="{StaticResource textSecondary}"
                           WidthRequest="44" />
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Margin="0"
                           HorizontalOptions="Start"
                           Style="{StaticResource InputLabelStyle}"
                           Text="seconds" />
                </FlexLayout>
            </Frame>
            <Frame Grid.Row="1" Style="{StaticResource FrameStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height=".9*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Margin="10"
                           Style="{StaticResource InputLabelStyle}"
                           Text="Log File: (Time, Latitude, Longitude, Altitude) " />
                    <Frame Grid.Row="1"
                           Margin="0"
                           Style="{StaticResource FrameStyle}">
                        <ScrollView x:Name="ScrollBox">
                            <Label x:Name="logLabel"
                                   FontSize="Micro"
                                   IsEnabled="true"
                                   PropertyChanged="LogLabel_PropertyChanged"
                                   Style="{StaticResource EditorStyle}"
                                   Text="{Binding TextEntry}" />
                        </ScrollView>
                    </Frame>
                    <StackLayout Grid.Row="2"
                                 HorizontalOptions="CenterAndExpand"
                                 Orientation="Horizontal">
                        <Button Grid.Row="2"
                                Padding="10,0"
                                Command="{Binding ToggleButtonClickCommand}"
                                Text="{Binding ToggleButtonLabel}">
                            <Button.TextColor>
                                <OnPlatform x:TypeArguments="Color"
                                            Android="{StaticResource textSecondary}"
                                            iOS="{StaticResource greenPrimary}" />
                            </Button.TextColor>
                            <Button.BackgroundColor>
                                <OnPlatform x:TypeArguments="Color" Android="{StaticResource bgSecondary}" />
                            </Button.BackgroundColor>
                        </Button>
                        <Button Grid.Row="2"
                                Padding="10,0"
                                Command="{Binding ClearButtonClickCommand}"
                                Text="Clear">
                            <Button.TextColor>
                                <OnPlatform x:TypeArguments="Color"
                                            Android="{StaticResource textSecondary}"
                                            iOS="{StaticResource greenPrimary}" />
                            </Button.TextColor>
                            <Button.BackgroundColor>
                                <OnPlatform x:TypeArguments="Color" Android="{StaticResource bgSecondary}" />
                            </Button.BackgroundColor>
                        </Button>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
