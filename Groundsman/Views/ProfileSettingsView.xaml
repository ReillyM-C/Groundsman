<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Groundsman"
             xmlns:behaviors="clr-namespace:Groundsman.Behaviors;assembly=Groundsman"
             x:Class="Groundsman.ProfileSettingsView"
             Title="Settings">
    <ContentPage.BindingContext>
        <local:ProfileSettingsViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <TableView BackgroundColor="{DynamicResource bgPrimary}" Intent="Settings">
            <TableRoot>
                <TableSection Title="Profile">
                    <ViewCell>
                        <Entry Margin="7,0" TextColor="{DynamicResource textPrimary}" FontSize="Small" Text="{Binding IDEntry}" Placeholder="User ID">
                            <Entry.Behaviors>
                                <behaviors:EntryLengthValidatorBehavior MaxLength="30" />
                            </Entry.Behaviors>
                        </Entry>
                    </ViewCell>
                </TableSection>
                <TableSection Title="GPS and Data Precision">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="15,0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                            <Label Text="GPS Accuracy" VerticalOptions="Center" TextColor="{DynamicResource textPrimary}"></Label>
                            <Picker x:Name="picker" HorizontalOptions="EndAndExpand" WidthRequest="95" FontSize="Small" TitleColor="Black" SelectedIndexChanged="OnPickerSelectedIndexChanged" SelectedIndex="{Binding GPSPrecisionEntry}">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Best</x:String>
                                        <x:String>High</x:String>
                                        <x:String>Medium</x:String>
                                        <x:String>Low</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="15,0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Source={x:Reference stepperDecimal}, Path=Value}" VerticalOptions="Center" TextColor="{DynamicResource textPrimary}"></Label>
                            <Label Text="Decimal Places" VerticalOptions="Center" TextColor="{DynamicResource textPrimary}"></Label>
                            <Stepper x:Name="stepperDecimal" Maximum="12" Increment="1" HorizontalOptions="EndAndExpand" Value="{Binding DecimalAccuracyEntry}" ValueChanged="OnStepperValueChanged" ></Stepper>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Feature List">
                    <SwitchCell Text="Show Points on Map" OnChanged="ShowPointsOnMapChanged" On="{Binding ShowPointsOnMap}"/>
                    <SwitchCell Text="Show Lines on Map" OnChanged="ShowLinesOnMapChanged" On="{Binding ShowLinesOnMap}"/>
                    <SwitchCell Text="Show Polygons on Map" OnChanged="ShowPolygonsOnMapChanged" On="{Binding ShowPolygonsOnMap}"/>
                    <ViewCell Tapped="OnViewCellTapped">
                        <StackLayout Orientation="Horizontal" Padding="15,0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                            <Label Text="Clear All Features" TextColor="{StaticResource greenPrimary}"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Logger">
                    <SwitchCell Text="Show Log Path on Map" OnChanged="ShowLogPathOnMapChanged" On="{Binding ShowLogPathOnMap}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>