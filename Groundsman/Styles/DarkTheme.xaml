<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="Groundsman.Styles.DarkTheme"
                    xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                    Source="DefaultTheme.xaml">

    <Color x:Key="bgPrimary">#000000</Color>
    <Color x:Key="bgSecondary">#111111</Color>
    <Color x:Key="bgTertiary">#303030</Color>

    <Color x:Key="BaseColor">#000000</Color>
    <Color x:Key="Background">#000000</Color>
    <Color x:Key="Foreground">#111111</Color>
    <Color x:Key="Seperator">#323432</Color>

    <Color x:Key="textPrimary">#FFFFFF</Color>
    <Color x:Key="textSecondary">#a0a0a0</Color>
    <Color x:Key="textTertiary">#707070</Color>

    <ios:BlurEffectStyle x:Key="blurEffect">Dark</ios:BlurEffectStyle>

</ResourceDictionary>   